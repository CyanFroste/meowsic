{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meowsic",
  "identifier": "com.cyan.meowsic",
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm vite:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "windows": {
      "nsis": null
    }
  },
  "app": {
    "windows": [
      {
        "title": "meowsic",
        "label": "main",
        "decorations": false,
        "width": 1600,
        "height": 900,
        "center": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  }
}
